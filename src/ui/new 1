import java.util.Scanner;

public class Calculator
{
	public double operating1; public String operator;
	public double operating2 = reader.nextDouble(); double result;
	
	public static void main(String[] Args){
		
		Scanner reader = new Scanner(System.in);
		
		System.out.println ("Digite el primer operando:");
		operating1 = reader.nextDouble();
		
		System.out.println("Digite el operador, si no tiene claro como escribir su operador solo presione enter:");
		operator = reader.nextString();
		
		while(operator = "null") {
		System.out.println("Suma: +\nResta: -\nMultiplicacion: *\nDivision: /\nModulo: %\nSeno: sen")
		System.out.println("Coseno: cos\nTangente: tan\nLogaritmo base 10: log10\nLogaritmo base n: log")
		System.out.println("Raiz cuadrada: root2\nRaiz n-ésima: root\nPotenciación: ^")
		System.out.println("Convertir grados a radianes: rad\nConvertir radianes a grados: deg")
		System.out.println("Convertir decimales a hexadecimales: dh
		}
		
		if (operator.equalsIgnoreCase("+"))
			result = Calculator.makeAddition(double operating1, double operating2);
		else if(operator.equalsIgnoreCase("-"))
			result = Calculator.makeSubtraction(double operating1, double operating2);
		else if(operator.equalsIgnoreCase("*"))
			result = Calculator.makeMultiplication(double operating1, double operating2);
		else if(operator.equalsIgnoreCase("/"))
			result = Calculator.makeDivision(double operating1, double operating2);
		else if(operator.equalsIgnoreCase("%"))
			result = Calculator.makeModulus(double operating1, double operating2);
		else if(operator.equalsIgnoreCase("sen"))
			result = ;
		else if(operator.equalsIgnoreCase("cos"))
			result = ;
		else if(operator.equalsIgnoreCase("tan"))
			result = ;
		else if(operator.equalsIgnoreCase("log10"))
			result = ;
		else if(operator.equalsIgnoreCase("log"))
			result = ;
		else if(operator.equalsIgnoreCase("root2"))
			result = ;
		else if(operator.equalsIgnoreCase("root"))
			result = ;
		else if(operator.equalsIgnoreCase("^"))
			result = ;
		else if(operator.equalsIgnoreCase("!"))
			result = ;
		else if(operator.equalsIgnoreCase("rad"))
			result = ;
		else if(operator.equalsIgnoreCase("deg"))
			result = ;
		else if(operator.equalsIgnoreCase("dh"))
			result = ;
		else 
			result = "El operador ingresado no existe";
		
		System.out.print("El resultado es: " + result)
	}
	
	public static int makeAddition(double operating1, double operating2)
	{
	int addition = operating1 + operating2;
	return addition;
	}
	
	public static int makeSubtraction(double operating1, double operating2)
	{
	int subtraction = operating1 - operating2;
	return subtraction;
	}
	
	public static int makeMultiplication(double operating1, double operating2)
	{
	int multiplication = operating1 - operating2;
	return multiplication;
	}
	
	public static int makeDivision(double operating1, double operating2)
	{
	int division = operating1 / operating2;
	return division;
	}
	
	public static int makeModulus(double operating1, double operating2)
	{
	int modulus = operating1 % operating2;
	return modulus;
	}
}

	